<%- include ../partials/head%>
    <% include ../partials/menu%>
        <div class="container">

            <form action="/rooms/edit/<%= dataRoom.id%>" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Building Name:</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= dataRoom.name%>">
                </div>
                <div class="form-group">
                    <label for="address">Address:</label>
                    <input type="text" class="form-control" id="address" name="address" value="<%= dataRoom.address%>">
                </div>
                <div class="form-group">
                    <label for="city">City:</label>
                    <input type="text" class="form-control" id="city" name="city" value="<%= dataRoom.city%>">
                </div>
                <div class="form-group">
                    <label for="capacity">Capacity:</label>
                    <input type="text" class="form-control" id="capacity" name="capacity" value="<%= dataRoom.capacity%>">
                </div>
                <div class="form-group">
                    <label for="facility">Facility:</label>
                    <input type="text" class="form-control" id="facility" name="facility" value="<%= dataRoom.facility%>">
                </div>
                <div class="form-group">
                    <label for="price">Price per Day:</label>
                    <input type="text" class="form-control" id="price" name="price" value="<%= dataRoom.price%>">
                </div>
                <div class="form-group">
                    <label for="file">Edit your image:</label>
                    <input type="file" name="room_pict" id="file" />
                    <img src="/images/<%=dataRoom.photo_url%>" style="width : 30%">

                </div>


                <button type="submit" class="btn btn-default">Edit Room</button>
            </form>
        </div>

        <%- include ../partials/footer%>